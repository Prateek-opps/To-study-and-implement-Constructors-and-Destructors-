#include <iostream>
using namespace std;
class student {
public:
    string name;
    int rollNumber;
    char grade;
    // Constructor declaration
    student();
    void display();
};
// Constructor definition
student::student() {
    cout<<"Enter Name: ";
    cin>>name;
    cout<<"Enter Roll Number: ";
    cin>>rollNumber;
    cout<<"Enter Grade: ";
    cin>>grade;
}
void student::display() {
    cout<<"Student Info"<<endl;
    cout<<"Name: "<<name<<endl;
    cout<<"Roll Number:"<<rollNumber<<endl;
    cout<<"Grade:"<<grade<<endl;
}
int main() {
    student s1;
    s1.display();  
    return 0;
}
/*Output:-
Enter Name: Prateek
Enter Roll Number: 077
Enter Grade: A
Student Info
Name: Prateek
Roll Number:77
Grade:A
*/
